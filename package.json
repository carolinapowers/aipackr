{
  "name": "aipackr",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Powered Travel Packing Assistant",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "dev": "yarn workspaces run dev",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "typecheck": "yarn workspaces run typecheck",
    "clean": "yarn workspaces run clean",
    "dev:db": "docker compose up postgres redis",
    "dev:api": "yarn workspace @aipackr/api dev",
    "dev:web": "yarn workspace @aipackr/web dev",
    "dev:hybrid": "concurrently \"yarn dev:db\" \"yarn dev:api\" \"yarn dev:web\"",
    "prod": "docker compose up --build"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^9.2.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@4.3.1"
}
